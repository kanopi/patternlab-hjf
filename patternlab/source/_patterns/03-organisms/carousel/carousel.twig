<div class="small-12 carousel-title">{{ title }}</div>
<div class="c-carousel orbit" role="region" aria-label="{{ title }}" data-orbit>
  <div class="orbit-wrapper">
    <div class="orbit-controls">
      <button class="orbit-previous"><span class="show-for-sr">Previous Slide</span>&#9664;&#xFE0E;</button>
      <button class="orbit-next"><span class="show-for-sr">Next Slide</span>&#9654;&#xFE0E;</button>
    </div>
    <ul class="orbit-container">
    {% for slide in slides %}
      {{ slide }}
    {% endfor %}
    </ul>
  </div>
  <nav class="orbit-bullets">
  {% for key, slide in slides %}
    <button data-slide="{{ key }}"{% if key == 0 %} class="is-active"{% endif %} title="{{ title }} Slide {{ key + 1 }}">
      {% if key == 0 %}<span class="show-for-sr">Current Slide</span>{% endif %}
    </button>
  {% endfor %}
  </nav>
</div>
