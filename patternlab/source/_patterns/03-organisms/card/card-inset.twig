<div class="c-card c-card{{ card_variation }}">
  <div class="grid-container">
    <div class="grid-x grid-padding-x" data-equalizer>
      {% if image %}
      <div class="c-card--image small-12 medium-5" data-equalizer-watch>
        {{ image }}
      </div>
      {% endif %}
      <div class="c-card--content small-12 medium-5 card-overlay" data-equalizer-watch>
        <div class="content-wrapper">
          <div class="category">{{ category }}</div>
          <h3>{{ heading }}</h3>
          <div>{{ summary }}</div>
          <div class="button-wrapper">{{ button|raw }}</div>
        </div>
      </div>
    </div>
  </div>
</div>
