<div id="block-exposedformsearchsearch" class="block-exposedformsearchsearch search-filters">

  <div class="search-wrapper">
    <form id="{{ form_id }}" action="{{ action }}" method="{{ method }}">
    {% if keywords %}
      <div class="keywords-wrapper">
        <label>{{ 'What are you looking for?'|t }}</label>
        <div class="input-wrapper">
          {{ keywords }}
          <button class="button radius js-form-submit form-submit" data-drupal-selector="edit-submit-search-2">
            Submit
          </button>
        </div>
      </div>
    {% elseif title %}
     <div class="title-wrapper">
      <h2>{{ title }}</h2>
     </div>
    {% endif %}

      {# Filters modal. #}
      <div id="filters-modal" class="filters-modal closed">
        <div class="reveal-wrapper">
          {{ service }}
          {{ research_area }}
          {{ user_group }}
          {{ resource_type }}
        </div>
        {# Render Submit and Reset Buttons. #}
        <div id="edit-actions">
          {{ submit }}
          {{ reset }}
        </div>
        {# Modal close button. #}
        <button class="close-button" data-close aria-label="Close modal" type="button">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    </form>
    <button id="filter-button" class="button rectangular unfiltered">{{ 'Filters'|t }} <span class="counter"></span></button>
  </div>
</div>
