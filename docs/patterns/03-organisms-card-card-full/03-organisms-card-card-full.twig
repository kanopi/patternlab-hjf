<div class="c-card c-card{{ card_variation }}" style="background-image: url('{{ image }}')">
  <div class="grid-container">
    <div class="grid-x">
      <div class="c-card--image show-for-small-only">
        <img src="{{ image }}" />
      </div>
      <div class="c-card--content medium-6 medium-offset-6 large-5 large-offset-7 cell">
        <h3>{{ title }}</h3>
        {{ summary }}
        {{ button }}
      </div>
    </div>
  </div>
</div>